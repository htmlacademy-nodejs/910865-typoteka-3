doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(name='description' content='Личный блог Типотека')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title Типотека
    link(rel='preload' href='/fonts/Inter-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='/fonts/Inter-Medium.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='/fonts/SFProDisplay-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/style.min.css')
    style.
      a.active{
        pointer-events: none;
      }

      .post__picture img {
        margin: 0 auto;
      }
  body
    mixin fullDate(className, date)
      time(class=className datetime=`${new Date(date).getFullYear()}-${new Date(date).getMonth() < 9 ? `0${new Date(date).getMonth() + 1}` : new Date(date).getMonth() + 1}-${new Date(date).getDate() < 10 ? `0${new Date(date).getDate()}` : new Date(date).getDate()}T${new Date(date).getHours() < 10 ? `0${new Date(date).getHours()}` : new Date(date).getHours()}:${new Date(date).getMinutes() < 10 ? `0${new Date(date).getMinutes()}` : new Date(date).getMinutes()}`) #{new Date(date).getDate() < 10 ? `0${new Date(date).getDate()}` : new Date(date).getDate()}.#{new Date(date).getMonth() < 9 ? `0${new Date(date).getMonth() + 1}` : new Date(date).getMonth() + 1}.#{new Date(date).getFullYear()}, #{new Date(date).getHours() < 10 ? `0${new Date(date).getHours()}` : new Date(date).getHours()}:#{new Date(date).getMinutes() < 10 ? `0${new Date(date).getMinutes()}` : new Date(date).getMinutes()}

    mixin categoryBlock(categories, isArticlePage, activeCategoryTab = ``)
      ul.themes(class=`${isArticlePage ? `post__themes` : ``}`)
        each category in categories
          li.themes__item
            a.themes__item-link(href='#', class=`${category.name === activeCategoryTab ? `themes__item-link--active` : ``}`)
              | #{category.name}
              sup #{category.count}
            if isArticlePage
              button.themes__remove-btn(type='button') Удалить категорию

    mixin articlesList(articles)
      ul.preview__list
        each article in articles
          li.preview__item(class=`${article.picture.length !== 0 ? `` : `preview__item--noimage`}`)
            ul.preview__breadcrumbs
              each category in article.categories
                li.preview__breadcrumbs-item
                  a.preview__breadcrumbs-link(href='#') #{category.name}
            if (article.picture.length !== 0)
              .preview__background
                -
                  const pictureName = article.picture.split(`@`)[0];

                img.preview__background-image(src=`/img/${pictureName}@1x.jpg` width='460' height='240' srcset=`/img/${pictureName}@1x.jpg 1x, /img/${pictureName}@2x.jpg 2x` alt=`${pictureName}`)
            +fullDate(`preview__time`, article.createdAt)
            h3.preview__name
              a.preview__name-link(href='#') #{article.title}
            p.preview__text
              | #{article.announce}
            a.preview__comment(href='#')
              | Комментарии
              span.preview__cloud
              b.preview__comment-count #{article.comments.length}

    mixin pagination(page, totalPages, width, prefix)
      -
        let start = page - width;
        let end = page + width;

        if (start < 1) {
          end += 1 - start;
          start = 1;
        }

        if (end > totalPages) {
          start -= end - totalPages;
          end = totalPages;
        }

        if (start < 1) {
          start = 1;
        }

        let i = start - 1;

      if (end > 1)
        .preview__toggle-wrapper
          ul.preview__pagination.pagination
            if start >= 1
              li
                a.pagination__button.button.button--backwards(class=`${page === 1 ? `button--disabled` : ``}`, href=`${prefix}page=${page - 1}`, aria-label='Страница назад') Назад
            while i++ < end
              li.pagination__item(class=`${page === i ? `pagination__item--active` : ``}`)
                a(class={active: i === page} href=`${prefix}page=${i}`)= i
            if end <= totalPages
              li
                a.pagination__button.button.button--forward(class=`${page === end ? `button--disabled` : ``}`, href=`${prefix}page=${page + 1}`, aria-label='Страница вперед') Вперед

    div(class=wrapper.class)
      include partials/header
      block content
      include partials/footer
    script(src='/js/vendor.js')
    script(src='/js/main.js')
