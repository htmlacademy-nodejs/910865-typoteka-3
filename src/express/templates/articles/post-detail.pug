extends ../layout

block content
  main
    section.post
      h1.visually-hidden Пост
      section.post__content
        h2.visually-hidden Основное содержание
        .post__wrapper
          .post__head
            a.post__backwards.button.button--backwards(href='#') Назад
            +fullDate(`post__date`, article.createdAt)
            h2.post__title.title.title--main #{article.title}
            +categoryBlock(categories, true)
          if (article.picture === `sea@1x.jpg`)
            .post__picture
              -
                const pictureName = article.picture.split(`@`)[0];

              img(src=`/img/${pictureName}-fullsize@1x.jpg` srcset=`/img/${pictureName}-fullsize@1x.jpg 1x, /img/${pictureName}-fullsize@2x.jpg 2x` alt=`${pictureName}`)
          if (article.picture === `skyscraper@1x.jpg`)
            .post__picture
              -
                const pictureName = article.picture.split(`@`)[0];

              img(src=`/img/${pictureName}@1x.jpg` srcset=`/img/${pictureName}@1x.jpg 1x, /img/${pictureName}@2x.jpg 2x` alt=`${pictureName}`)
          if (article.picture === `forest@1x.jpg`)
            .post__picture
              -
                const pictureName = article.picture.split(`@`)[0];

              img(src=`/img/${pictureName}@1x.jpg` srcset=`/img/${pictureName}@1x.jpg 1x, /img/${pictureName}@2x.jpg 2x` alt=`${pictureName}`)
          if (article.picture)
            .post__picture
              -
                //const pictureName = article.picture.split(`@`)[0];
                const pictureName = article.picture;
                //src/express/upload/img
                ///Users/ozkhanm/Desktop/academy/910865-typoteka-3/src/express/upload/img

              img(src=`/upload/img/${pictureName}` srcset=`/upload/img/${pictureName} 1x, /upload/img/${pictureName} 2x` alt=`${pictureName}`)
          .post__text
            h3 Бирюзовое доверие
            if (article.fullText)
              p
                | #{article.fullText}
      .post__wrapper.post__wrapper--comments
        section.post__comments.comments
          h2.comments__title.title.title--middle Комментарии
          ul.comments__list
            each comment in article.comments
              li.comments__comment
                .comments__avatar.avatar
                  img(src='/img/avatar-1.png' alt='аватар пользователя')
                .comments__text
                  .comments__head
                    p Евгений Петров •
                    +fullDate(`comments__date`, comment.updatedAt)
                  p.comments__message #{comment.text}
          .comments__footer.comments__footer--user
            form(action=`/articles/${article.id}/comments` method='POST')
              .comments__avatar.avatar
                img(src='/img/avatar-2.png' alt='аватар пользователя')
              label
                textarea(rows='1' name='message' placeholder='Присоединиться к обсуждению')
              button.comments__button.button.button--colored(type='submit') Опубликовать
              if validationMessages
                div.form__validation-error
                  p.form__error-message При отправке формы возникли ошибки:
                  ul.form__errors
                    each errorMessage in validationMessages
                      li.form__error #{errorMessage}
